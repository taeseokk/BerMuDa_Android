<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview_layout">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_cardview_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="18.3dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="18.7dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="7dp">

        <RelativeLayout
            android:id="@+id/firstLin_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#EFEFEF"
            android:orientation="vertical"
            android:shape="rectangle"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_profileImage_a"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />
                <TextView
                    android:id="@+id/name_tv_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="20sp"
                    android:textColor="@color/black_2"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="21dp"
                    android:layout_toEndOf="@+id/iv_profileImage_a"
                    android:text="이름" />

<!--                <CheckBox-->
<!--                    android:id="@+id/sound"-->
<!--                    android:layout_width="50dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_alignParentTop="true"-->
<!--                    android:layout_alignParentEnd="true"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:layout_marginEnd="4dp"-->
<!--                    android:button="@drawable/volume_checkbox"-->
<!--                    android:paddingStart="7dp"-->
<!--                    android:scaleType="fitStart"-->
<!--                    android:textSize="14sp"-->
<!--                    tools:ignore="TouchTargetSizeCheck" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_profileImage_a"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/background"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">
                    <TextView
                        android:id="@+id/content_tv_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="text"
                        android:textSize="16sp"
                        android:textColor="@color/black_2"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>