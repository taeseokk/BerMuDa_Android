<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".menu_page1.Main1Fragment"
    android:id="@+id/cardview_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="18.3dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="18.7dp"
            android:layout_marginBottom="11dp"
            app:cardBackgroundColor="#EFEFEF"
            app:cardCornerRadius="7dp"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:padding="5sp">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textColor="@color/black_2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/content_tv"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

<!--                <CheckBox-->
<!--                    android:id="@+id/liked"-->
<!--                    android:layout_width="35dp"-->
<!--                    android:layout_height="35dp"-->
<!--                    android:layout_alignParentTop="true"-->
<!--                    android:layout_alignParentEnd="true"-->
<!--                    android:layout_marginStart="25sp"-->
<!--                    android:button="@drawable/heart_checkbox"-->
<!--                    android:paddingStart="7dp"-->
<!--                    android:textSize="14sp"-->

<!--                    app:layout_constraintBottom_toTopOf="@+id/content_tv"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent"-->
<!--                    tools:ignore="TouchTargetSizeCheck" />-->


                <CheckBox
                    android:id="@+id/sound"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"

                    android:layout_marginTop="4sp"
                    android:layout_marginEnd="15sp"
                    android:button="@drawable/volume_checkbox"
                    android:paddingStart="7dp"
                    android:scaleType="fitStart"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/content_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginBottom="3sp"
                    android:hint="text"
                    android:paddingStart="8sp"
                    android:paddingTop="7sp"
                    android:paddingEnd="8sp"
                    android:paddingBottom="3sp"
                    android:textColor="@color/black_2"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>